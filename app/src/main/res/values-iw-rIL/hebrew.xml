<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Buttons-->
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonMain" parent="Button">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/light_gray_light</item>
        <item name="fontFamily">@font/secular_one</item>
    </style>

    <style name="ButtonMainPlay" parent="ButtonMain">
        <item name="android:textSize">50sp</item>
        <item name="android:background">@drawable/button_play_selector</item>
    </style>

    <style name="ButtonMainReset" parent="ButtonMain">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@drawable/button_reset_selector</item>
    </style>

    <!--Text Views-->
    <style name="TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="TextViewLevelTitle" parent="TextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/secular_one</item>
        <item name="android:textColor">@color/light_gray_light</item>
        <item name="android:shadowColor">@color/grass_darker</item>
        <item name="android:shadowRadius">15</item>
        <item name="strokeColor">@color/grass_dark</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="TextViewLevelTitleLand">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/secular_one</item>
        <item name="android:textColor">@color/light_gray_light</item>
        <item name="android:shadowColor">@color/grass_darker</item>
        <item name="android:shadowRadius">15</item>
        <item name="strokeColor">@color/grass_dark</item>
        <item name="strokeWidth">4dp</item>
    </style>

    <style name="TextViewRepeat" parent="TextView">
        <item name="android:fontFamily">@font/m_plus_rounded</item>
        <item name="android:textColor">@color/dark_gray_light</item>
    </style>

    <style name="TextViewScore" parent="TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/secular_one</item>
        <item name="android:textColor">@color/blue_jeans_light</item>
    </style>

    <style name="TextViewScoreLand" parent="TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/secular_one</item>
        <item name="android:textColor">@color/blue_jeans_light</item>
    </style>

    <style name="TextViewTapToPlay" parent="TextView">
        <item name="android:fontFamily">@font/m_plus_rounded</item>
        <item name="android:textColor">@color/grass_dark</item>
    </style>

    <style name="TextViewPause" parent="TextView">
        <item name="android:textSize">60sp</item>
        <item name="android:fontFamily">@font/m_plus_rounded</item>
        <item name="android:textColor">@color/dark_gray_light</item>
    </style>
</resources>