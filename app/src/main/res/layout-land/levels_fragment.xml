<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/levels_fragment">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/levels_fragment_body_land"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/header_frame_layout"
            android:layout_gravity="center|top">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/simon_levels_fragment_title2_land"
                android:scaleType="centerCrop"
                android:paddingBottom="10dp"
                android:layout_marginHorizontal="20dp"/>

            <TextView
                android:id="@+id/level_title"
                style="@style/TextViewLevelTitleLand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:paddingHorizontal="20dp"
                />

        </FrameLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:id="@+id/levels_grid_view"
            android:layout_gravity="center"
            android:gravity="center"
            android:numColumns="8"
            android:clipToPadding="true"
            android:stretchMode="columnWidth"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="30dp">

        </GridView>

    </LinearLayout>

</FrameLayout>