<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grass_light</item>
        <item name="colorPrimaryVariant">@color/grass_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sunflower_light</item>
        <item name="colorSecondaryVariant">@color/sunflower_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/grass_darker</item>
        <item name="colorOnBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!--Buttons-->
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonMain" parent="Button">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonMainPlay" parent="ButtonMain">
        <item name="android:textSize">50sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">@drawable/button_play_selector</item>
        <item name="fontFamily">@font/nerko_one</item>
        <item name="android:textColor">@color/light_gray_light</item>
    </style>

    <style name="ButtonMainReset" parent="ButtonMain">
        <item name="android:textSize">30sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">@drawable/button_reset_selector</item>
        <item name="fontFamily">@font/nerko_one</item>
        <item name="android:textColor">@color/light_gray_light</item>
    </style>

    <style name="ButtonsCell" parent="Button">
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/levels_button_cell_selector</item>
        <item name="android:fontFamily">@font/fraunces</item>
        <item name="android:textColor">@color/light_gray_light</item>
        <item name="elevation">0dp</item>
    </style>


    <!--Text Views-->
    <style name="TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewLogo" parent="TextView">
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/nerko_one</item>
    </style>

    <style name="TextViewLevelTitle" parent="TextView">
        <item name="android:textSize">50sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:fontFamily">@font/londrina_solid</item>
        <item name="android:textColor">@color/light_gray_light</item>
        <item name="android:shadowColor">@color/grass_darker</item>
        <item name="android:shadowRadius">15</item>
        <item name="strokeColor">@color/grass_dark</item>
        <item name="strokeWidth">4dp</item>
    </style>


</resources>

