<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/levels_fragment"
    android:layoutDirection="locale">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/levels_fragment_body"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/levels_frame_layout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/levels_fragment_title2"
                android:scaleType="centerCrop"
                android:padding="30dp"/>

            <TextView
                android:id="@+id/level_title"
                style="@style/TextViewLevelTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:paddingHorizontal="20dp"/>

        </FrameLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/levels_grid_view"
            android:layout_below="@+id/levels_frame_layout"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:numColumns="4"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:clipToPadding="true"
            android:fitsSystemWindows="true"
            android:stretchMode="columnWidth">

        </GridView>


    </RelativeLayout>

</FrameLayout>