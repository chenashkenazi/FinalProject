<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/level1_layout"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ic_level1_button_top_left"
                android:id="@+id/level1_button_top_left"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ic_level1_top_right"
                android:id="@+id/level1_button_top_right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ic_level1_bottom_left"
                android:id="@+id/level1_button_bottom_left"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ic_level1_bottom_right"
                android:id="@+id/level1_button_bottom_right"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:id="@+id/level2_layout"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/level2_left_top"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_level2_left_top" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_level2_left_bottom"
                    android:id="@+id/level2_left_bottom"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/level2_right_top"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_level2_right_top" />


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_level2_right_bottom"
                    android:id="@+id/level2_right_bottom"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"


            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_level2_left_center"
                android:id="@+id/level2_left_center"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ic_level2_right_center"
                android:id="@+id/level2_right_center"/>


        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/level3_layout"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/level3_left_top1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_left_top1"
                />

            <ImageView
                android:id="@+id/level3_right_top1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_right_top1"
                android:layout_marginLeft="80dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout2">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_left_top2"
                android:id="@+id/level3_left_top2"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_right_top2"
                android:id="@+id/level3_right_top2"
                android:layout_toRightOf="@+id/level3_left_top2"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_left_bottom1"
                android:id="@+id/level3_left_bottom1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_right_bottom1"
                android:id="@+id/level3_right_bottom1"
                android:layout_toRightOf="@+id/level3_left_bottom1"
                android:layout_marginLeft="30dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_left_bottom2"
                android:id="@+id/level3_left_bottom2"
                android:layout_marginTop="25dp"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_right_bottom2"
                android:id="@+id/level3_right_bottom2"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="500dp"
         >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: "
            android:textSize="40dp"
            android:textColor="#101010"
            android:fontFamily="@font/nerko_one"
            android:id="@+id/score"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="#101010"
            android:layout_toEndOf="@id/score"
            android:fontFamily="@font/nerko_one"
            android:id="@+id/currentScore"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best score:"
            android:textSize="40dp"
            android:layout_toEndOf="@id/currentScore"
            android:textColor="#101010"
            android:id="@+id/bestScore"
            android:fontFamily="@font/nerko_one"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="#101010"
            android:fontFamily="@font/nerko_one"
            android:id="@+id/bestScoreUpdate"
            android:layout_toEndOf="@id/bestScore"
            />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pauseLayout">
        <TextView

            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="60dp"
            android:textSize="50dp"
            android:textColor="#8B838F"
            android:text="Tap to play"
            android:fontFamily="@font/nerko_one"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/welldone"
        android:id="@+id/welldone_animation"/>

        <TextView

            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="90dp"
            android:textSize="60dp"
            android:textColor="#AE5FE4"
            android:text="Pause"
            android:fontFamily="@font/nerko_one"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:id="@+id/backToPlay"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_play_foreground"
            />
    </FrameLayout>
</RelativeLayout>