<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/level3_left_top1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ic_level3_left_top1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ic_level3_left_bottom2"
                android:id="@+id/level3_left_bottom2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/level3_right_top1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ic_level3_right_top1"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ic_level3_right_bottom2"
                android:id="@+id/level3_right_bottom2"/>

        </LinearLayout>
    </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginBottom="43dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_level3_left_top2"
            android:id="@+id/level3_left_top2"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginBottom="43dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_level3_right_top2"
            android:id="@+id/level3_right_top2"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
           android:layout_marginTop="32dp"
            android:layout_marginLeft="55dp"
            android:src="@drawable/ic_level3_left_bottom1"
            android:id="@+id/level3_left_bottom1"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginTop="32dp"
            android:layout_marginRight="55dp"
            android:src="@drawable/ic_level3_right_bottom1"
            android:id="@+id/level3_right_bottom1"/>


    </LinearLayout>
</FrameLayout>
