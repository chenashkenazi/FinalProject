<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/level3_left_top1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_left_top1"
                />

            <ImageView
                android:id="@+id/level3_right_top1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_right_top1"
                android:layout_marginLeft="80dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout2">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_left_top2"
                android:id="@+id/level3_left_top2"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_right_top2"
                android:id="@+id/level3_right_top2"
                android:layout_toRightOf="@+id/level3_left_top2"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_left_bottom1"
                android:id="@+id/level3_left_bottom1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_right_bottom1"
                android:id="@+id/level3_right_bottom1"
                android:layout_toRightOf="@+id/level3_left_bottom1"
                android:layout_marginLeft="30dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_left_bottom2"
                android:id="@+id/level3_left_bottom2"
                android:layout_marginTop="25dp"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_level3_right_bottom2"
                android:id="@+id/level3_right_bottom2"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/welldone"
        android:id="@+id/welldone_animation"/>

</RelativeLayout>